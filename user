    <script>
        function editarCampo(id) {
            const campo = document.getElementById(id);
            const valorActual = campo.textContent;
            const nuevoValor = prompt(`Edita el campo ${id}:`, valorActual);

            if (nuevoValor !== null) {
                campo.textContent = nuevoValor;
            }
        }
    </script> 
